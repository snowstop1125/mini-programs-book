/**index.wxss**/
page{
  background: #fff;
}
.wrap-center{
  position: absolute;
  left: 50%;
  top:calc(50% - 60rpx);
  transform: translate(-50%,-50%)
}
.clause{
  position: absolute;
  right: 20rpx;
  top:20rpx;
  color: #999;
  font-size: 27rpx;
  display: flex;
  align-items: center;
}
.clause b{
  display: inline-block;
  width:25rpx;
  height: 25rpx;
  line-height: 25rpx;
  border-radius: 50%;
  border: 1px solid #999;
  text-align: center;
  font-size: 20rpx;
  margin-right:10rpx;
}
.tabBar{
  position: fixed;
  bottom: 0;
  width:100%;
  display: flex;
  flex-wrap:nowrap;
  color: #999;
  border-top: 1px solid #eee;
  padding: 15rpx 0 10rpx;
}
.tabBar.fix-iphonex-button{
  padding-bottom:68rpx;
}
.tabBar navigator{
  width:33%;
  font-size: 20rpx;
  text-align: center;
  color:#666;
  
}
.tabBar navigator.act{
  color: #fd6e70;
}
.tabBar image{
  width:40rpx;
  height:40rpx;
  margin:0rpx auto 10rpx;
  display:block;
}
.borrowbook-btn{
  background: #fd6e70;
  color: #fff;
  width: 300rpx;
  height: 300rpx;
  text-align: center;
  border-radius: 50%;
  margin:0rpx auto 0;
  display:flex;
  flex-direction:column;
  box-shadow: 0px 4px 4px #fd6e70;
  font-size: 32rpx;
}
.borrowbook-btn:hover{
  filter: grayscale(20%);
}
.borrowbook-btn image{
  width: 110rpx;
  margin:75rpx auto 20rpx;
}

.ad-img{
  padding-bottom:30rpx;
}
.ad-img image{
  display: block;
  margin: 0 auto;
  width:93%;
}