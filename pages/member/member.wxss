/* pages/member/member.wxss */
.member-head{
  position: fixed;
  top: 0;
  left: 0;
  background:#fd6e70;
  color: #fff;
  width: 100%;
  height: 350rpx;
}
.member-head .user-pic{
  width: 130rpx;
  height: 130rpx;
  margin: 20rpx auto 0;
  border-radius: 50%;
  border: 10rpx solid rgba(255, 255, 255, .1);
  overflow: hidden;
  background: rgba(255, 255, 255, .2);
  display: flex;
  align-items: center
}
.member-head .user-pic image{
  width: 100%;
}
.member-head .user-name{
  text-align: center;
  display: block;
  font-size: 28rpx;
  margin-top: 10rpx;
}
.member-head-btn{
  position: absolute;
  top: 70rpx;
  width: 120rpx;
  height: 100rpx;
  background: rgba(255, 255, 255, .1);
  display: flex;
  align-items: center;
}
.member-head-btn .pr{
  margin:0 20rpx;
}
.member-head-btn.m-btn-l{
  left: 0;
  justify-content: flex-end;
  border-radius: 0 50rpx 50rpx 0;
}
.member-head-btn.m-btn-l image{
  width: 65rpx;
}
.member-head-btn.m-btn-l .num{
  color:#fff;
  position:absolute;
  top:14rpx;
  left:0;
  font-size:25rpx;
  width:64rpx;
  text-align:center;
}
.member-head-btn.m-btn-r{
  right: 0;
  justify-content: flex-start;
  border-radius: 50rpx 0 0 50rpx;
}
.member-head-btn.m-btn-r image{
  width: 70rpx;
}
.member-head-nav{
  position: absolute;
  bottom: -94rpx;
  left: 50%;
  width: 660rpx;
  height: 188rpx;
  margin-left: -330rpx;
  background: #fff;
  display: flex;
  align-items: center;
  border-radius: 20rpx;
  box-shadow: 0px 10rpx 30rpx rgba(253, 110, 112, .4);
}
.member-head-nav::after{
  content: '';
  position: absolute;
  top: 45rpx;
  left: 50%;
  width: 1px;
  height: 100rpx;
  background: #eee;
}
.member-head-nav .nav-item{
  width: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.member-head-nav .nav-item image{
  width: 65rpx;
}
.member-head-nav .nav-item .nav-item-r{
  display: flex;
  flex-flow: column;
  margin-left: 20rpx;
  color: #999;
}
.member-head-nav .nav-item .nav-item-r .bold{
  color: #666;
  margin-top: 5rpx;
}
.member-head-nav .nav-item .nav-item-r .bold i{
  font-size: 20rpx;
}
.member-cell{
  margin-top:500rpx;
}
.logout{
  position: absolute;
  background: #fff;
  width:660rpx;
  color: #999;
  bottom: 50rpx;
  left: 50%;
  transform: translateX(-50%);
}
.logout.fix-iphonex-button{
  bottom: 100rpx;
}